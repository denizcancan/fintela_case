FROM python:3.12-slim

WORKDIR /app

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files and source code (needed for package build)
COPY pyproject.toml uv.lock README.md ./
COPY src/ ./src/

# Install dependencies (this will build the package)
RUN uv sync --frozen --no-dev

# Expose Dagster ports
EXPOSE 3000

# Run Dagster webserver
CMD ["uv", "run", "dagster-webserver", "-m", "case_study.definitions", "-h", "0.0.0.0", "-p", "3000"]